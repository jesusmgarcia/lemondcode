{
	"name": "parcel-first",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"start": "run-p -l type-check:watch start:dev",
		"start:dev": "rimraf dist && parcel ./src/index.html --open",
		"start:prod": "rimraf dist && parcel build ./src/index.html && lite-server --baseDir=\"dist\"",
		"build:dev": "rimraf dist && parcel ./src/index.html",
		"build:prod": "rimraf dist && parcel build ./src/index.html",
		"type-check": "tsc --noEmit",
		"type-check:watch": "npm run type-check -- --watch",
		"help": "parcel help build"
	},
	"comments": {
		"start:prod": "Runs production build on a local server. It needs lite-server installed globally (npm i lite-server -g)"
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.5",
		"rimraf": "^3.0.2",
		"sass": "^1.32.11",
		"typescript": "^4.2.4"
	},
	"dependencies": {
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	}
}
